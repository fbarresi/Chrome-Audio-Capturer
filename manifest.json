{
  "manifest_version": 2,

  "name": "SpotCapture",
  "description": "This extension captures the audio from spotify web and saves the output file on your computer when the capture is complete",
  "version": "1.0.0",
  "icons": {
    "128":"icon.png"
    },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Open SpotCapture"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js", "worker.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "tabCapture",
    "downloads",
    "storage", "https://open.spotify.com/*", "https://play.spotify.com/*"
  ],
  "commands": {
    "start": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+U"
      },
      "description": "Start Capture"
    },
    "stop": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "MacCtrl+Shift+X"
      },
      "description": "Stop Capture"
    }
  }
}
